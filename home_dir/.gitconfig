[push]
    default = current


[alias]
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all --name-status
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --name-status
    alias = config --get-regexp alias
    betterblame = log -p -M --follow --stat --
    betterblame2 = log -p -M --ignore-space-at-eol --follow --stat --

[core]
    sparsecheckout = true
    #pager = less -r

[color]
    ui = true
[http]
    sslverify = false

[init]
    templatedir = ~/.git_scripts/templates
